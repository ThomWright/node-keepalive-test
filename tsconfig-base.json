{
  "compilerOptions": {
    "plugins": [{"name": "typescript-tslint-plugin"}],
    "typeRoots": ["./typings", "./node_modules/@types"],
    "outDir": "./dist",
    "target": "es2018",
    "lib": ["es2018"],
    "module": "commonjs",
    "noUnusedLocals": true,
    "noErrorTruncation": true,
    "strict": true,
    "resolveJsonModule": true
  }
}
